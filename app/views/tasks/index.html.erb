<p id="notice"><%= notice %></p>

    <% @tasks_group.each do | a, tasks| %>
    
    
    <table>
    <thead>
      <% if a == true %>
        <h2>Finish Tasks</h2>
      <%else%>
        <h2>Unfinish Tasks</h2>
      <%end%>
        <tr>
          <th>Username</th>
          <th>Title</th>
          <th>End date</th>
          <th colspan="3"></th>
        </tr>
   </thead>
   
      <% tasks.each do | task| %>
        <tbody>
          <tr>
          <td><%= task.user.username%></td>
          <td><%= task.title %></td>
          <td><%= task.end_date %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <%end%>
    
      <%end%>
      </table>
      </tbody>


