
<div class="row">
  <div class="large-4 columns">
      <%= image_tag("http://icons.iconarchive.com/icons/tpdkdesign.net/refresh-cl/256/folder-blue-scheduled-tasks-icon.png", :alt => "Trello", ) %>
  </div>
     
  <div class="large-8 columns">
   <p><strong>Username:</strong> <%= @task.user.username %></p> 
   <p><strong>Title:</strong> <%= @task.title %></p>
   <p><strong>Description:</strong><%= @task.description %></p>
   <p><strong>Duration time:</strong><%= @task.duration_time %></p>
   <p><strong>Starting date:</strong><%= @task.starting_date %></p>
   <p><strong>End date:</strong><%= @task.end_date %></p>
   
  </div>
</div>

<div class="row">
    <%= link_to 'Edit', edit_task_path(@task), :class => "button" %> 
    <%= link_to 'Back', tasks_path, :class => "button secondary" %>
</div>